{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/renderer/*"]
    }
  },

  "include": ["src/renderer/**/*.ts", "src/renderer/**/*.tsx", "src/renderer/**/*.vue", "src/types"]
}
